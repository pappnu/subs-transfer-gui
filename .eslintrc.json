{
    "parser": "@babel/eslint-parser",
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "requireConfigFile": false,
        "ecmaVersion": 11,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "rules": {
        "comma-dangle": [
            "error",
            "only-multiline"
        ],
        "no-prototype-builtins": "off",
        "react/prop-types": [
            2,
            {
                "skipUndeclared": true
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
